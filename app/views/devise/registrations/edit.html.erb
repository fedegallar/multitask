<h2>Cuenta de usuario</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: ' ml-3 w-25', method: :put }) do |f|%>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %> <i>(Dejarlo en blanco si no quieres cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em>Mínimo <%= @minimum_password_length %> caracteres.</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmación de contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Contraseña actual" %> <i>(necesitamos tu contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", class: 'btn btn-primary' %>
  </div>
  <%= link_to "Volver", :back %>
<% end %>

